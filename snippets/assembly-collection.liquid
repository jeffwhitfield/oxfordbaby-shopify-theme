{% comment %}
  Renders an assembly collection card

  Accepts:
  - collection: {Object} Collection Liquid object

  Usage:
  {% render 'assembly-collection' %}
{% endcomment %}

<div class="assembly-collection">
  <h2>{{- collection.title | escape -}}</h2>
  <div class="assembly-set">
  {%- for product in collection.products -%}
    <div class="assembly-product">
      <h3>{{- product.title -}}</h3>
      
    </div>
  {%- endfor -%}
  </div>
</div>
